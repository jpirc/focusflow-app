generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?
  accounts      Account[]
  sessions      Session[]
  projects      Project[]
  tasks         Task[]
  
  // Preferences
  timezone      String    @default("America/Chicago")
  preferences   Json?     @default("{}")
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Project {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  color       String
  icon        String   @default("folder")
  sortOrder   Int      @default(0)
  isArchived  Boolean  @default(false)
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks       Task[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}

model Task {
  id               String    @id @default(cuid())
  userId           String
  projectId        String?
  parentTaskId     String?
  
  title            String
  description      String?
  icon             String    @default("target")
  
  // Scheduling
  date             String?   // ISO date string YYYY-MM-DD
  timeBlock        String    @default("anytime") // morning, afternoon, evening, anytime
  
  // Time tracking
  estimatedMinutes Int       @default(30)
  actualMinutes    Int?
  startedAt        DateTime? // When task status changed to in-progress
  completedAt      DateTime? // When task was marked completed
  
  // Status & Priority
  status           String    @default("pending")
  priority         String    @default("medium")
  energyLevel      String    @default("medium")
  completed        Boolean   @default(false)
  
  // Rollover tracking
  rolloverCount    Int       @default(0) // How many times this task has been rolled over
  
  // Relations
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  project          Project?  @relation(fields: [projectId], references: [id])
  parentTask       Task?     @relation("Subtasks", fields: [parentTaskId], references: [id])
  subtasks         Task[]    @relation("Subtasks")
  
  // Dependencies
  dependencies     TaskDependency[] @relation("DependentTasks")
  blocking         TaskDependency[] @relation("BlockingTasks")
  
  // Metadata
  aiGenerated      Boolean   @default(false)
  
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@index([userId])
  @@index([projectId])
  @@index([userId, date])
}

model TaskDependency {
  id            String   @id @default(cuid())
  taskId        String   // Task that is blocked
  dependsOnId   String   // Task that must be completed first
  
  task          Task     @relation("DependentTasks", fields: [taskId], references: [id], onDelete: Cascade)
  dependsOn     Task     @relation("BlockingTasks", fields: [dependsOnId], references: [id], onDelete: Cascade)
  
  createdAt     DateTime @default(now())
  
  @@unique([taskId, dependsOnId])
  @@index([taskId])
  @@index([dependsOnId])
}

// ============================================
// INTELLIGENCE & ANALYTICS FOUNDATION
// ============================================

// Event Sourcing: Every significant action is logged for learning & analytics
model TaskEvent {
  id            String   @id @default(cuid())
  userId        String
  taskId        String?  // Nullable for events like "session_start"
  
  // Event classification
  eventType     String   // created, updated, completed, started, paused, moved, deleted, etc.
  
  // Context at time of event (denormalized for fast analytics)
  hourOfDay     Int?     // 0-23, when event occurred
  dayOfWeek     Int?     // 0-6, Sunday-Saturday
  timeBlock     String?  // morning, afternoon, evening, anytime
  projectId     String?
  priority      String?
  energyLevel   String?
  
  // Change tracking
  previousValue Json?    // What changed from
  newValue      Json?    // What changed to
  
  // Extra context
  metadata      Json?    // Flexible storage for additional data
  
  createdAt     DateTime @default(now())
  
  @@index([userId])
  @@index([userId, eventType])
  @@index([userId, createdAt])
  @@index([taskId])
}

// Learned patterns and insights per user
model UserInsight {
  id            String   @id @default(cuid())
  userId        String
  
  // Pattern identification
  insightType   String   // time_preference, energy_pattern, project_habit, etc.
  category      String?  // project_id, energy_level, task_type, etc.
  
  // The actual insight
  pattern       Json     // Structured data describing the pattern
  confidence    Float    @default(0) // 0-1, how confident we are in this pattern
  sampleSize    Int      @default(0) // Number of data points this is based on
  
  // Lifecycle
  isActive      Boolean  @default(true)
  lastUpdated   DateTime @default(now())
  expiresAt     DateTime? // Patterns can decay if not reinforced
  
  createdAt     DateTime @default(now())
  
  @@unique([userId, insightType, category])
  @@index([userId])
  @@index([userId, insightType])
}

// User feature flags and AI preferences
model UserFeature {
  id                  String   @id @default(cuid())
  userId              String   @unique
  
  // Feature flags
  smartSuggestions    Boolean  @default(true)
  aiBreakdown         Boolean  @default(true)
  autoScheduling      Boolean  @default(false)
  learningEnabled     Boolean  @default(true)
  
  // AI preferences
  suggestionFrequency String   @default("balanced") // minimal, balanced, proactive
  privacyLevel        String   @default("full") // full, limited, none (how much data to use for learning)
  
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  @@index([userId])
}

// Suggestions generated by the intelligence layer
model Suggestion {
  id            String    @id @default(cuid())
  userId        String
  taskId        String?   // If suggestion is about a specific task
  
  // Suggestion details
  type          String    // time_block, priority, breakdown, schedule, reminder
  title         String
  description   String?
  
  // The recommended action
  action        Json      // { type: "move", targetTimeBlock: "morning" }
  reasoning     String?   // "You complete 78% of client work before noon"
  
  // Confidence & source
  confidence    Float     @default(0.5)
  source        String    @default("rule") // rule, pattern, ai
  
  // User interaction
  status        String    @default("pending") // pending, accepted, dismissed, expired
  respondedAt   DateTime?
  
  // Lifecycle
  expiresAt     DateTime?
  createdAt     DateTime  @default(now())
  
  @@index([userId])
  @@index([userId, status])
}

